extends layout

block content
    //- Loop through and display errors
    if errors
        each error in errors 
            p(style="color:red") #{error.msg}

    h1(style="text-align: center;") Add Movie

    //- Center the form
    .container(style="max-width: 800px; margin: 20px auto;padding: 0 20px;")
        .row.justify-content-center
            .col-md-6
                form(method="POST", action="/api/movie/add", class="text-center")
                    //- Create input elements based on movie model
                    .form-group(style="margin-bottom: 20px;")
                        label(for="plot", style="font-weight: bold;display: block;margin-bottom: 5px;") Plot:
                        input.form-control(name="plot", type="text",style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;" )

                    .form-group(style="margin-bottom: 20px;")
                        label(for="genres",style="font-weight: bold;display: block;margin-bottom: 5px;") Genres:
                        //- Wrap genres in a div with a border
                        .genres-container(style="border: 1px solid #ddd; padding: 10px; margin-bottom: 10px;")
                            each genre in genres
                                label.genres-label(style="display: inline-block;padding: 5px 10px;margin: 5px;")
                                    input.form-control(name="genres", type="checkbox", value=genre, style="margin-right: 5px;")
                                    | #{genre}

                    .form-group(style="margin-bottom: 20px;")
                        label(for="runtime",style="font-weight: bold;display: block;margin-bottom: 5px;") Runtime:
                        input.form-control(name="runtime", type="number",style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;")
                    
                    .form-group(style="margin-bottom: 20px;")
                        label(for="cast",style="font-weight: bold;display: block;margin-bottom: 5px;") Cast:
                        input.form-control(name="cast", type="text",style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;")

                    .form-group(style="margin-bottom: 20px;")
                        label(for="num_mflix_comments",style="font-weight: bold;display: block;margin-bottom: 5px;") Number of Comments:
                        input.form-control(name="num_mflix_comments", type="number",style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;")

                    .form-group(style="margin-bottom: 20px;")
                        label(for="title",style="font-weight: bold;display: block;margin-bottom: 5px;") Title:
                        input.form-control(name="title", type="text",,style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;")

                    .form-group(style="margin-bottom: 20px;")
                        label(for="fullplot",style="font-weight: bold;display: block;margin-bottom: 5px;") Full Plot:
                        input.form-control(name="fullplot", type="text",style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;")

                    .form-group(style="margin-bottom: 20px;")
                        label(for="languages",style="font-weight: bold;display: block;margin-bottom: 5px;") Languages:
                        input.form-control(name="languages", type="text",style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;")

                    .form-group(style="margin-bottom: 20px;")
                        label(for="released",style="font-weight: bold;display: block;margin-bottom: 5px;") Released Date:
                        input.form-control(name="released", type="date",style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;")

                    .form-group(style="margin-bottom: 20px;")
