                        label(for="tomatoesLastUpdated",style="font-weight: bold;display: block;margin-bottom: 5px;") Tomatoes Last Updated:
                        input.form-control(name="tomatoes.lastUpdated", type="date",style="width: 50%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 5px;")

                    input.btn.btn-primary(type="submit", value="Submit", style="background-color: #007bff;color: white;border: none;padding: 10px 20px;cursor: pointer; border-radius: 5px;")