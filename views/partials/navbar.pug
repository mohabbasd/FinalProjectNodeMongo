doctype html
html(lang='en')
  head
    title My Website
    style.
      nav {
        background-color: #333;
        overflow: hidden;
      }

      nav a {
        float: left;
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }

      nav a:hover {
        background-color: #ddd;
        color: black;
      }

      nav a.active {
        background-color: #4CAF50;
        color: white;
      }

      nav .bigger-link {
        color: #fff;
        font-size: 20px;
        text-decoration: none;
        border: none;
        padding: 15px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      nav .bigger-link:hover {
        background-color: #fff;
        color: #333;
      }
  body
    nav
      a.nav-link.bigger-link(href="/" style="display: inline-block; margin-right: 10px;") Home
      if user
        a.nav-link.bigger-link(href="/api/movie/add" style="display: inline-block; margin-right: 10px;") Add Movie
        a.nav-link.bigger-link(href="api/users/logout" style="display: inline-block; margin-right: 10px;") Logout
      else
        a.nav-link.bigger-link(href="/api/users/register" style="display: inline-block; margin-right: 10px;") Register
        a.nav-link.bigger-link(href="/api/users/login" style="display: inline-block; margin-right: 10px;") Login